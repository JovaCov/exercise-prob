<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Edit Exercise</title>
</head>
<body>
  <header>
    <h1>Edit Exercise</h1>
  </header>
  
  <main>
    <form action="/exercise/update/<%= exercise.id %>" method="PATCH">
      <!-- Edit Name -->
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="<%= exercise.name %>" required>
      <br>

      <!-- Edit Description -->
      <label for="description">Description:</label>
      <textarea id="description" name="description" rows="4" required><%= exercise.description %></textarea>
      <br>

      <!-- Edit Sets -->
      <label for="sets">Sets:</label>
      <input type="number" id="sets" name="sets" value="<%= exercise.sets %>" required>
      <br>

      <!-- Edit Reps -->
      <label for="reps">Reps:</label>
      <input type="number" id="reps" name="reps" value="<%= exercise.reps %>" required>
      <br>

      <!-- Submit Button -->
      <button type="submit">Update Exercise</button>
    </form>
  </main>

  <footer>
    <a href="/exercises">Back to Exercises</a>
  </footer>
</body>
</html>
